{
  "manifest_version": 3,
  "name": "Padlet to Notion",
  "version": "1.0.0",
  "description": "패들렛 페이지를 Notion DB에 저장합니다",
  "permissions": ["storage", "activeTab", "identity"],
  "host_permissions": [
    "https://padlet.com/*",
    "https://api.notion.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://padlet.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
